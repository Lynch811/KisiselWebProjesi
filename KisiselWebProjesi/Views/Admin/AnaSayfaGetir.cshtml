@model KisiselWebProjesi.Models.Siniflar.AnaSayfa

@{
    ViewBag.Title = "AnaSayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Ana Sayfa Güncelle</h2>
<hr />

 @using (Html.BeginForm("AnaSayfaGuncelle", "Admin", FormMethod.Post))
{

    @Html.LabelFor(x => x.id)
    @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.resim)
    @Html.TextBoxFor(x => x.resim, new { @class = "form-control", })
    <br />
    @Html.LabelFor(x => x.anabaslik)
    @Html.TextBoxFor(x => x.anabaslik, new { @class = "form-control", })
    <br />
    @Html.LabelFor(x => x.maviyazi)
    @Html.TextBoxFor(x => x.maviyazi, new { @class = "form-control", })
    <br />
    @Html.LabelFor(x => x.maviyaziyani)
    @Html.TextBoxFor(x => x.maviyaziyani, new { @class = "form-control", })
    <br />
    @Html.LabelFor(x => x.isim)
    @Html.TextBoxFor(x => x.isim, new { @class = "form-control", })
    <br />
    @Html.LabelFor(x => x.aciklama)
    @Html.TextBoxFor(x => x.aciklama, new { @class = "form-control", })
    <br />
    @Html.LabelFor(x => x.metin)
    @Html.TextAreaFor(x => x.metin, new { @class = "form-control", })
    <br />
    
    <button class="btn btn-success">Ana Sayfa Güncelle</button>


}



